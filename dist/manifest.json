{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "background": {
    "scripts": [
      "jquery-3.1.1.min.js",
      "event.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://localhost/*",
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": [""],
      "js": ["contentScript.js"]
    }
  ]
}